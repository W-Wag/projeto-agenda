<%- include('./includes/head.ejs') %>

<%- include ('./includes/nav.ejs') %>

<div class="container-fluid my-5">
  <div class="col-lg-8 px-0 m-auto">
        <h1 class="text-center fw-semibold">Contatos</h1>
        <% if(contato._id) { %>
          <p class="text-center mb-5">Edite seus contatos ou <br> veja eles <a class="links hover-effect" href="/">Clicando aqui</a>
          </p>
        
        <%} else { %>
          <p class="text-center mb-5">Crie os seus contatos ou <br> veja eles <a class="links hover-effect" href="/">Clicando aqui</a>
          </p>
        <% } %>

        <%- include('includes/messages') %>
        <div class="col-lg-8 px-0 errors mb-5"></div>


        <% if(contato._id) { %>
          <form class="row row-cols-lg-auto g-3 align-items-center d-block form-contato" action="/contato/edit/<%= contato._id%>" method="post">
        <%} else { %>
          <form class="row row-cols-lg-auto g-3 align-items-center d-block form-contato" action="/contato/register" method="post">
        <% } %>

        
            <input type="hidden" name="_csrf" value=<%= csrfToken %> 
            >

            <div class="col-8">
              <label class="visually-hidden" for="inlineFormInputGroupUsername">Nome</label>
              <div class="input-group">
              <input type="text" class="form-control" id="inlineFormInputGroupUsername"
              placeholder="Nome"
              name="nome"
              value="<%= contato.nome %>"

              >
              </div>
              </div>

              <div class="col-8">
                <label class="visually-hidden" for="inlineFormInputGroupUsername">Sobrenome</label>
                <div class="input-group">
                <input type="text" class="form-control" id="inlineFormInputGroupUsername" 
                placeholder="Sobrenome"
                name="sobrenome"
                value="<%= contato.sobrenome %>"
                >
                
                </div>
                </div>

            <div class="col-8">
            <label class="visually-hidden" for="inlineFormInputGroupUsername">email</label>
            <div class="input-group">
            <input type="email" class="form-control" id="inlineFormInputGroupUsername" placeholder="Email"
            name="email"
            value="<%= contato.email %>"
            >
            </div>
            </div>

            <div class="col-8">
              <label class="visually-hidden" for="inlineFormInputGroupUsername">Telefone</label>
              <div class="input-group">
              <input type="tel" class="form-control" id="inlineFormInputGroupUsername"
              placeholder="Telefone"
              name="telefone"
              value="<%= contato.telefone %>"
              >
              </div>
              </div>
        
            <div class="col-12">
            <button type="submit" class="btn btn-primary">Salvar</button>
            </div>
        </form>
  </div>
</div>

<%- include ('./includes/footer.ejs') %>